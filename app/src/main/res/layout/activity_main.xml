<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipeView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/listaConta">
        </ListView>
    </android.support.v4.widget.SwipeRefreshLayout>

    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/fab"
        app:menu_colorNormal="@color/colorPrimaryDark"
        app:menu_colorPressed="@color/colorPrimary"
        app:menu_labels_colorNormal="@color/colorPrimaryDark"
        app:menu_labels_colorPressed="@android:color/transparent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="28dp"
        android:layout_marginEnd="26dp"
        android:tint="@color/colorAccent"
        app:fabSize="normal"
        app:menu_labels_showShadow="true"
        app:menu_openDirection="up"
        app:menu_backgroundColor="@android:color/transparent"
        app:rippleColor="@color/colorAccent"
        app:srcCompat="@drawable/ic_add">

        <com.github.clans.fab.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_label="Relatorio"
            app:fab_size="mini"
            android:id="@+id/fabRelatorio"
            android:src="@drawable/ic_insert_chart_black_24dp"/>

        <com.github.clans.fab.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_label="Novo"
            app:fab_size="mini"
            android:id="@+id/fabNovo"
            android:src="@drawable/ic_add_box_black_24dp"/>

    </com.github.clans.fab.FloatingActionMenu>

</RelativeLayout>